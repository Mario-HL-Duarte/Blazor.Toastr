@using Blazor.Toastr
@page "/"
@inject IToastrService Toastr

<button class="btn btn-success" onclick="@ToastrSuccess">Success</button>
<button class="btn btn-info" onclick="@ToastrInfo">Info</button>
<button class="btn btn-warning" onclick="@ToastrWarning">Warning</button>
<button class="btn btn-danger" onclick="@ToastrError">Error</button>

@functions{
    void ToastrSuccess()
    {
        Toastr.Show(Enums.ToastrType.Success, "This is a success message", "Title");
    }
    void ToastrInfo()
    {
        Toastr.Show(Enums.ToastrType.Info, "This is an info message", "Title");
    }
    void ToastrWarning()
    {
        Toastr.Show(Enums.ToastrType.Warning, "This is a warning message", "Title");
    }
    void ToastrError()
    {
        Toastr.Show(Enums.ToastrType.Error, "This is an error message", "Title");
    }
}